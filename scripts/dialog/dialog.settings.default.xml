<?xml version="1.0" encoding="UTF-8" ?>
<dialog>

	<comments>
		(This node is ignored by the parser.)

		NOTE: DEFAULT SETTINGS FILE
		Values here will be over-ridden by values in the user settings file, "_user/settings.xml"

		- "true" and "false" are translated to booleans
		- a number written as a percent, e.g. 10%, can be interpreted later, but is read as a string
		- Numbers are returned as numeric, not string
		- hAlignment = left, right or center
		- slideview.autoFadeToolsTime > 0 means slideView is handling navbar + tools, etc., auto fading
		  don't also set navbar.autoFadeTime, but leave it at "0"

		- pageMarkNumbering = "chapter" or "book"
		  Date formatting:
		  http://www.lua.org/pil/22.1.html

	</comments>

	<class value="dialog">

		<!-- dims everything behind the dialog -->
		<dimmerColor value="0,0,0,60%" />
		
		<msgDialogBookstore>You are connected to {bookstore}.</msgDialogBookstore>
		<msgDialogSignin>To download your books from the bookstore, enter your username and password below:</msgDialogSignin>
		<msgDialogChildLock>To lock books which are rated appropriate for 18+ years of age, enter a lock code below:</msgDialogChildLock>
		<msgConfirmFieldDoesNotMatch>The confirmation does not match!</msgConfirmFieldDoesNotMatch>

		<!-- margins are percent of width of screen: margins are T,L,B,R -->
		<dialogWindowMargins value="5%, 5%, 5%, 5%" />
		<dialogInnerMargins value="2%, 2%, 3%, 2%" />
		<dialogBackgroundColor value="230,230,230,100%" />
		<dialogTextInputFieldsTop value="15%" />
		<dialogBackgroundStrokeColor value="50,50,50,100%" />
		<dialogBackgroundStroke value="10" />

		<cornerRadius value="30" />
		
		<headerBackground value="200,200,200,100%" />
		<headerHeight value="80" />

		<dialogFont value="Avenir-Light" />
		<dialogFontColor value="100,100,100,100%" />
		<dialogFontSize value="16" />
		<dialogTextLineHeight value="20" />
		<dialogTextSpaceAfter value="24" />
		<dialogBlockSpacing value="40" />
		<dialogInfoTextAlignment value="Center" />
		
		<dialogTitle value="Settings" />
		<dialogTitleFont value="Avenir-Medium" />
		<dialogTitleFontSize value="24" />
		<dialogTitleFontColor value="60,60,60,100%" />
		
		<dialogContentY value= "10%" />
		
		<!-- we position these text fields from the left of the settings window -->
		<dialogTextInputFieldXOffset value="10%" />
		<fieldLabelWidth value="20%" />
		<!-- In general, this isn't so good. It limits text width to a percentage of the dialog width, rather than using the inner margins -->
		<fieldDescWidth notInUse="100%" />
		<fieldTextColor value="0,0,0,100%" />
		<fieldFrameBackground value="255,255,255,255" />
		<fieldFrameStrokeColor value="220,220,220,100%" />
		<fieldFrameStrokeWidth value="1" />
		
		<spaceAfterDesc value = "16" />
		<buttonSpaceAfter value="20" />
		
		
		<!-- lock code to prevent children from seeing 18+ rated books -->
		<lockCodeSize value="4" />
		
		<showSubmitButton value="false" />
		<showCancelButton value="true" />

		<dialogButton value="_ui/button-gear-gray.png" />
		<dialogButtonOver value="_ui/button-gear-gray-over.png" />
		<dialogButtonReferencePoint value="Center" />	
		<dialogButtonWidth value="44" />
		<dialogButtonHeight value="44" />
		<dialogButtonX value="96%" />
		<dialogButtonY value="50%" />
		<dialogButtonLabelXOffset value="0" />
		<dialogButtonLabelYOffset value="0" />
		<dialogButtonLabel value="" />
		<dialogButtonLabelFont value="Avenir-Medium" />
		<dialogButtonLabelFontSize value="12" />
		<dialogButtonLabelFontColor value="120,120,120,100%" />
		<dialogButtonLabelFontOverColor value="120,120,120,100%" />

		<!-- close button -->
		<dialogCloseButton value="_ui/button-check-round-black.png" />
		<dialogCloseButtonOver value="_ui/button-check-round-black-over.png" />
		<dialogCloseButtonWidth value="44" />
		<dialogCloseButtonHeight value="44" />
		
		<!-- cancel button -->
		<dialogCancelButton value="_ui/button-x-round-black.png" />
		<dialogCancelButtonOver value="_ui/button-x-round-black-over.png" />
		<dialogCancelButtonWidth value="44" />
		<dialogCancelButtonHeight value="44" />
		

	</class>

</dialog>